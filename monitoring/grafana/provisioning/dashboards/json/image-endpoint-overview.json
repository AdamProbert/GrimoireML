{
  "title": "Image Endpoint Overview",
  "uid": "image-endpoint-overview",
  "version": 1,
  "schemaVersion": 39,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Circuit Open",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {"expr": "image_circuit_open"}
      ],
      "fieldConfig": {"defaults": {"unit": "none"}},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "timeseries",
      "title": "Origin Success vs Errors",
      "id": 2,
      "datasource": {"type": "prometheus","uid": "prometheus"},
      "targets": [
        {"expr": "sum(rate(image_requests_total{source=\"origin\",outcome=\"success\"}[5m]))", "legendFormat": "success"},
        {"expr": "sum(rate(image_requests_total{source=\"origin\",outcome=\"error\"}[5m]))", "legendFormat": "error"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Cache Hit Ratio",
      "id": 3,
      "datasource": {"type": "prometheus","uid": "prometheus"},
      "targets": [
        {"expr": "sum(rate(image_requests_total{source=\"cache\",outcome=\"hit\"}[5m])) / sum(rate(image_requests_total{source=~\"cache|origin\"}[5m]))", "legendFormat": "hit_ratio"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Fetch Latency p95",
      "id": 4,
      "datasource": {"type": "prometheus","uid": "prometheus"},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum by (le) (rate(image_origin_fetch_latency_seconds_bucket[5m])))", "legendFormat": "p95"}
      ]
    },
    {
      "type": "stat",
      "title": "Last Cached Image Size (bytes)",
      "id": 5,
      "datasource": {"type": "prometheus","uid": "prometheus"},
      "targets": [
        {"expr": "image_cache_bytes_last"}
      ],
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    }
  ],
  "time": {"from": "now-6h", "to": "now"},
  "timezone": "browser"
}
